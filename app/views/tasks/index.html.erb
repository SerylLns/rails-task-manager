<h1>My Tasks</h1>

<ul>
<% @tasks.each do |task| %>
  <li><%= link_to task.title, task_path(task) %>
    <% if task.completed %>
      <i class="fas fa-check-square"></i>
    <% else %>
       <i class="far fa-square"></i>  
    <% end %>
  </li>
<% end %>
</ul>

<%= link_to "Create a new Task", tasks_new_path  %>
